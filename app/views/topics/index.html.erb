<h1>トピック一覧</h1>
<ul>
<% topics.each do |topic| %>
  <li>
  <%= link_to topic.title, topics_show_path(topic.id) %>
  <%= link_to '[削除]', topics_delete_path(topic.id), method: :delete, data: { turbo_method: :delete, turbo_confirm: '本当に削除してよろしいでしょうか？？'  }%>
  </li>
  <% end %>
</ul>
<h1>トピック新規登録</h1>
<%= form_for @newTopic, :url => {:action => 'create'} do |f| %>
  <%= f.text_field :title %>
  <%= f.submit %>
<% end %>
