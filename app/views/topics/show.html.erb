<h1><%= @topic.title %></h1>
<%
=begin %>
<% @posts.each_with_index do |post , idx| %>
  <p>
    <%= idx + 1 %>. <%= post.name %> : <%= post.body %>
  </p>
<% end %>
<%
=end %>

<%
=begin %>
<h3>新規書き込み</h3>
<%= form_for @newpost, :url => posts_create_path do |f| %>
  <p>お名前</p>
  <p><%= f.text_field :name %></p>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>
<%
=end %>

<%= link_to root_path do %>
<button>戻る</button>
<% end %>

